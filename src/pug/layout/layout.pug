include ../includes/setting/mixins
doctype html
block vars
html(lang="ru-RU")
    head
        meta(charset="UTF-8")
        meta(name="viewport" , content="width=device-width, initial-scale=1")
        title #{title}
        include ../includes/setting/links
    body
        .app
            .content
                .container
                    block header
                .screen-wrapp
                    img.screen-bg.screen-bg--left(src="img/bg-left.png" alt="")
                    img.screen-bg.screen-bg--right(src="img/bg-right.png" alt="")
                    .container
                        block content
            block footer


        script(src="libs/jquery/jquery-3.4.1.min.js")
        script(src="libs/maskedinput/jquery.maskedinput.min.js")
        script(src="libs/slick/slick.min.js")
        script(src="libs/fontawesome/svg-with-js/js/fontawesome-all.min.js")
        script(src="libs/bootstrap/js/bootstrap.min.js")
        script(src="js/common.js")



